"*":
  "atom-autocomplete-php":
    binComposer: "composer"
    gotoKey: "cmd"
  "atom-ide-ui":
    "atom-ide-code-format":
      formatOnType: false
    "atom-ide-debugger":
      showDebuggerOnBpSet: false
    "atom-ide-signature-help": {}
    hyperclick:
      linuxTriggerKeys: "shiftKey"
    use:
      "atom-ide-debugger": "never"
  "auto-detect-indentation":
    showSpacingInStatusBar: false
  "autocomplete-plus":
    confirmCompletion: "tab"
  autosave:
    enabled: true
  core:
    autoHideMenuBar: true
    closeEmptyWindows: false
    disabledPackages: [
      "background-tips"
      "spell-check"
      "linter"
    ]
    openEmptyEditorOnStart: false
    packagesWithKeymapsDisabled: [
      "php-ide-serenata"
      "minimap"
      "atom-autocomplete-php"
      "markdown-preview"
    ]
    projectHome: "/home/laurent/Development/"
    reopenProjectMenuCount: 5
    telemetryConsent: "no"
    themes: [
      "atom-distraction-free-ui-theme"
      "atom-distraction-free-syntax"
    ]
  editor:
    autoIndentOnPaste: false
    fontFamily: "Ubuntu Mono"
    fontSize: 16
    lineHeight: 1.3
    preferredLineLength: 120
    scrollPastEnd: true
    showIndentGuide: true
    showInvisibles: true
    softWrap: true
    softWrapHangingIndent: 2
    tabLength: 4
    tabType: "soft"
    zoomFontWhenCtrlScrolling: false
  "exception-reporting":
    userId: "d0b8398b-e6f2-451a-9def-989cf394de19"
  linter:
    lintOnChange: false
  "linter-php": {}
  "linter-phpmd":
    strictMode: true
  "linter-phpstan":
    level: "2"
  "linter-ui-default":
    showDecorations: false
    showPanel: true
  "markdown-preview": {}
  minimap:
    adjustMinimapWidthOnlyIfSmaller: false
    autoToggle: false
    displayPluginsControls: false
    minimapScrollIndicator: false
    plugins:
      "git-diff": true
      "git-diffDecorationsZIndex": 0
      "highlight-selected": true
      "highlight-selectedDecorationsZIndex": 0
    useHardwareAcceleration: false
  "php-ide-serenata":
    general:
      doNotShowProjectChangeMessage: true
      projectOpenCount: 14
    storagePath: "/home/laurent/.cache/php-ide-serenata"
  "status-bar":
    cursorPositionFormat: "line %L, col %C"
    selectionCountFormat: "(%L lines, %C characters)"
  welcome:
    showOnStartup: false
  whitespace:
    ignoreWhitespaceOnCurrentLine: false
  "wrap-guide":
    columns: [
      80
      120
    ]
".html.text.vue":
  editor:
    tabLength: 2
".js.source":
  editor:
    tabLength: 2
